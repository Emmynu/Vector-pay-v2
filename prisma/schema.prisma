generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  uid String @unique
  firstName String
  lastName String
  email String
  avatarUrl String
  verified Boolean
  totpCode String
  totpQrCode String
}
